{
  "name": "catboy-for-vscode",
  "displayName": "Catboy Build System",
  "description": "Catboyâ„¢ build system integration for VS Code.",
  "version": "0.1.9",
  "publisher": "playercatboy",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "icon": "resources/catboy.png",
  "keywords": [
    "catboy",
    "build",
    "c",
    "cpp",
    "build system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/playercatboy/catboy-for-vscode"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "catboy",
          "title": "Catboy",
          "icon": "resources/cat-dark.svg"
        }
      ]
    },
    "views": {
      "catboy": [
        {
          "id": "catboyProjects",
          "name": "Projects",
          "contextualTitle": "Catboy Projects"
        }
      ]
    },
    "commands": [
      {
        "command": "catboy.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "catboy.build",
        "title": "Build",
        "icon": "$(tools)"
      },
      {
        "command": "catboy.clean",
        "title": "Clean",
        "icon": "$(trash)"
      },
      {
        "command": "catboy.rebuild",
        "title": "Rebuild",
        "icon": "$(sync)"
      },
      {
        "command": "catboy.selectTarget",
        "title": "Catboy: Select Target",
        "category": "Catboy"
      },
      {
        "command": "catboy.showOutput",
        "title": "Catboy: Show Output",
        "category": "Catboy"
      },
      {
        "command": "catboy.toggleYamlFiles",
        "title": "Toggle YAML File Showing",
        "icon": {
          "light": "$(file)",
          "dark": "$(file)"
        }
      },
      {
        "command": "catboy.toggleYamlFilesOn",
        "title": "Toggle YAML File Showing (ON)",
        "icon": "$(file-code)"
      },
      {
        "command": "catboy.toggleYamlFilesOff",
        "title": "Toggle YAML File Showing (OFF)",
        "icon": "$(file)"
      },
      {
        "command": "catboy.goToFile",
        "title": "Go to YAML File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "catboy.setCurrentTarget",
        "title": "Set as Current Target"
      },
      {
        "command": "catboy.buildCurrent",
        "title": "Build Current Target",
        "icon": "$(tools)"
      },
      {
        "command": "catboy.cleanCurrent",
        "title": "Clean Current Target",
        "icon": "$(trash)"
      },
      {
        "command": "catboy.rebuildCurrent",
        "title": "Rebuild Current Target",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "catboy.refresh",
          "when": "view == catboyProjects",
          "group": "navigation@1"
        },
        {
          "command": "catboy.toggleYamlFilesOn",
          "when": "view == catboyProjects && catboy.showYamlFiles",
          "group": "navigation@2"
        },
        {
          "command": "catboy.toggleYamlFilesOff",
          "when": "view == catboyProjects && !catboy.showYamlFiles",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "catboy.build",
          "when": "view == catboyProjects && viewItem == target",
          "group": "inline@1"
        },
        {
          "command": "catboy.clean",
          "when": "view == catboyProjects && viewItem == target",
          "group": "inline@2"
        },
        {
          "command": "catboy.rebuild",
          "when": "view == catboyProjects && viewItem == target",
          "group": "inline@3"
        },
        {
          "command": "catboy.build",
          "when": "view == catboyProjects && viewItem == buildFile",
          "group": "inline@1"
        },
        {
          "command": "catboy.clean",
          "when": "view == catboyProjects && viewItem == buildFile",
          "group": "inline@2"
        },
        {
          "command": "catboy.rebuild",
          "when": "view == catboyProjects && viewItem == buildFile",
          "group": "inline@3"
        },
        {
          "command": "catboy.goToFile",
          "when": "view == catboyProjects && viewItem == buildFile",
          "group": "inline@4"
        },
        {
          "command": "catboy.goToFile",
          "when": "view == catboyProjects && viewItem == target",
          "group": "inline@4"
        },
        {
          "command": "catboy.setCurrentTarget",
          "when": "view == catboyProjects && viewItem == target",
          "group": "1_target"
        },
        {
          "command": "catboy.goToFile",
          "when": "view == catboyProjects && viewItem == target",
          "group": "2_navigation"
        },
        {
          "command": "catboy.build",
          "when": "view == catboyProjects && viewItem == target",
          "group": "3_build@1"
        },
        {
          "command": "catboy.clean",
          "when": "view == catboyProjects && viewItem == target",
          "group": "3_build@2"
        },
        {
          "command": "catboy.rebuild",
          "when": "view == catboyProjects && viewItem == target",
          "group": "3_build@3"
        }
      ]
    },
    "configuration": {
      "title": "Catboy",
      "properties": {
        "catboy.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the Catboy executable. If not specified, 'catboy' will be used from PATH."
        },
        "catboy.showYamlFiles": {
          "type": "boolean",
          "default": false,
          "description": "Show build.yaml file entries in the project tree view."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
